{

  /* Spell check language for this repository differs from my default, en-US. */
  "cSpell.language": "en-GB",

  /* Add custom dictionary for this repository only. */
  "cSpell.customDictionaries": {
    "resumeDictionary": {
      "name": "Résumé Dictionary",
      "path": "${workspaceFolder:résumé}/.cspell/dictionary.txt",
      "scope": "folder",
      "addWords": true
    }
  },

  /* Vertical guidelines for line wrapping. */
  "editor.rulers": [
    100,
  ],

  /* Remove line wrap for everything except AsciiDoc. */
  "editor.wordWrap": "off",
  "[asciidoc]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
  },

  /* Enforce 2 spaces for indentation. */
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  /* Show control and empty space characters. */
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",

  /* Enable all auto-formatting mechanisms. */
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  /* Enable auto-fixes. */
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
  },

  /* Don't allow commits to protected branches. */
  "git.branchProtectionPrompt": "alwaysPrompt",
  "git.branchProtection": [
    // "stable",
    // "release/*",
  ],

}
